using UnityEngine;

public class Trampoline : MonoBehaviour
{
    // Сила стрибка до зміни
    private float previousJumpStrength;

    // Коли гравець входить у зону тригера
    private void OnTriggerEnter(Collider other)
    {
        // Перевіряємо, чи має об'єкт компонент Jump
        Jump jumpComponent = other.GetComponent<Jump>();
        if (jumpComponent != null)
        {
            // Зберігаємо попереднє значення сили стрибка
            previousJumpStrength = jumpComponent.jumpStrength;

            // Змінюємо силу стрибка на більшу (наприклад, 10)
            jumpComponent.jumpStrength = 10f;
        }
    }

    // Коли гравець виходить із зони тригера
    private void OnTriggerExit(Collider other)
    {
        // Перевіряємо, чи має об'єкт компонент Jump
        Jump jumpComponent = other.GetComponent<Jump>();
        if (jumpComponent != null)
        {
            // Повертаємо попереднє значення сили стрибка
            jumpComponent.jumpStrength = previousJumpStrength;
        }
    }
}
